- for comment in @advertisement.comments
  %div{ :class => "comment#{comment.id}" }
    %strong= link_to_unless comment.site_url.blank?, h(comment.author_name), h(comment.site_url)
    %em on #{comment.created_at.strftime('%b %d, %Y at %H:%M')}
    .content
      =simple_format comment.content
    %p
      - if can? :update, comment
        = link_to "Edit",  [comment.advertisement, comment]
      - if can? :destroy, comment
        | #{link_to "Destroy", [comment.advertisement, comment], :method => :delete, :confirm => "Are you sure?", :remote => true}

