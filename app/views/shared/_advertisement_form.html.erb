<%= form_for @advertisement, :html =>{ :multipart =>true }  do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Write new advert..." %>
  </div>
  <div class="field">
    <%= f.file_field :img %>
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>

