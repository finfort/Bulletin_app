<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html:{  class: "form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>

<%= f.input :username %>
<%= f.input :full_name %>

  <%= f.input  :email, label: 'Your email here' %>
  <%= f.input  :birthday, label: 'Your birthday here' %>
  <%= f.input  :address, label: 'Your address here' %>
  <%= f.input  :city, label: 'Your city here' %>
  <%= f.input  :state, label: 'Your state here' %>
  <%= f.input  :country, label: 'Your country here' %>
  <%= f.input  :zip, label: 'Zip' %>

  <% if f.object.password_required? %>
    <div><%= f.label :password %><br />
    <%= f.password_field :password %></div>

    <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation %></div>
  <% end %>


  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "links" %>
